<h2>FORM CONTAINER</h2>

<%= form_for @cart, url: checkout_path, method: :post do |f| %>
  <section class='form-frame'>
    <h3>Informasi pembeli</h3>
    <div class='form-group'>
      <%= f.email_field :recipient_email, class: "form-control",
        placeholder: "Email" %>
    </div>
  </section>

  <section class='form-frame'>
    <h3>Alamat pengiriman</h3>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.text_field :recipient_first_name, class: 'form-control',
            placeholder: "Nama depan" %>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.text_field :recipient_last_name, class: 'form-control',
            placeholder: "Nama belakang" %>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <%= f.text_field :recipient_company, class: "form-control",
        placeholder: "Nama perusahaan (Opsional)"%>
    </div>

    <div class='form-group'>
      <%= f.text_area :recipient_address, class: "form-control",
        placeholder: "Alamat" %>
    </div>

    <div class='form-group'>
      <%= f.text_field :recipient_city, class: 'form-control',
        placeholder: "Kota" %>
    </div>

    <div class='form-group'>
      <%= f.text_field :recipient_phone, class: "form-control",
        placeholder: "No telpon" %>
    </div>
  </section>

  <section class='form-frame'>
    <h3>Pengirim</h3>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.text_field :billing_first_name, class: 'form-control',
            placeholder: "Nama depan" %>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='form-group'>
          <%= f.text_field :billing_last_name, class: 'form-control',
            placeholder: "Nama belakang" %>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <%= f.text_field :billing_phone, class: "form-control",
        placeholder: "No telpon" %>
    </div>

    <div class='form-group'>
      <%= f.text_field :billing_email, class: "form-control",
        placeholder: "Email" %>
    </div>

    <div class='form-group'>
      <%= f.text_area :billing_address, class: "form-control",
        placeholder: "Alamat" %>
    </div>
  </section>

  <section class='form-frame order-summary'>
    <h3>Item pembelian</h3>
    <%= render "checkouts/summaries/items_summary", cart: @cart %>
    <%= render "checkouts/summaries/billing_summary", cart: @cart %>
  </section>

  <section class='form-frame'>
    <h3>Special note</h3>
    <div class='form-group'>
      <%= f.text_area :special_note, class: 'form-control',
        placeholder: "Catatan tambahan" %>
    </div>
  </section>

  <section class='form-frame payment-form-frame'>
    <h3>Pembayaran</h3>
    <fieldset class="form-group">
      <%= hidden_field_tag "direct[credit_card][token_id]", "", id: "cc_token_id" %>
  		<%= text_field_tag "direct[credit_card]",
        "", id: "cc_card_number", class: "form-control",
        placeholder: "Nomor kartu kredit" %>
	  </fieldset>
    <div class='clearfix'></div>

    <div class="row">
      <fieldset class="form-group">
        <div class="col-md-4">
          <%= text_field_tag "direct[cc][expmonth]",
            "", id: "cc_card_exp_month", class: "form-control",
            placeholder: "Expiry Month (MM)", maxlength: 2 %>
        </div>
        <div class="col-md-4">
          <%= text_field_tag "direct[cc][expyear]",
            "", id: "cc_card_exp_year", class: "form-control",
            placeholder: "Expiry Year (YYYY)", maxlength: 4 %>
        </div>
        <div class='col-md-4'>
          <%= text_field_tag "direct[cc][cvv]", "",
            id: "cc_card_cvv", class: "form-control",
            placeholder: "CVV", maxlength: 3 %>
        </div>
      </fieldset>
    </div>
  </section>
<% end %>
