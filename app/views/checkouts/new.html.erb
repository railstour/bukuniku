<div class='container-fluid checkout-container'>
  <div class='row fill'>
    <div class='checkout-container-wrapper'>
      <section id='checkout-form-container' class='col-sm-7'>
        <%= render 'checkout_form_container' %>
      </section>

      <aside id='checkouted-items' class='col-sm-5'>
        <%= render 'checkouted_items', cart: @cart %>
      </aside>
    </div>
  </div>
</div>

