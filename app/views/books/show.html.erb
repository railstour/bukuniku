
<div class='book-detail'>
  <div class='col-sm-3'>
    <div class='image-placeholder'>
      <%= image_tag @book.image, width: 300, height: 380 %>
    </div>
  </div>
  <div class='col-sm-6 col-sm-offset-1'>
    <div class='book-header'>
      <p class='title'>
        <%= @book.title %>
      </p>
      <p class='author'>
        By <%= @book.author%>
      </p>
    </div>
    <div class='book-detail'>
      <div class='book-price'>
        <p class='stock'>
          <%= @book.quantity > 0 ? 'In Stock' : 'Out of Stock'%>
        </p>
        <p class='price'>
          <%= money_amount(@book.price) %>
        </p>
      </div>
      <div class='book-summary'>
        <h4>Description:</h4>
        <%= @book.summary %>
      </div>
    </div>
  </div>
</div>
